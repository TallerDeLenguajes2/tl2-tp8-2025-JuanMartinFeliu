@model SistemaVentas.Web.ViewModels.PresupuestoViewModel

<section class="container mt-4">
    <h2 class="text-center">Editar Presupuesto</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="IdPresupuesto" />

        <div class="form-group mt-3">
            <label>Nombre del destinatario</label>
            <input asp-for="NombreDestinatario" class="form-control" />
            <span asp-validation-for="NombreDestinatario" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label>Fecha de creaci√≥n</label>
            <input asp-for="FechaCreacion" type="date" class="form-control" />
            <span asp-validation-for="FechaCreacion" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Guardar cambios</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
    </form>
</section>

@section Scripts {
 <partial name="_ValidationScriptsPartial" />
}