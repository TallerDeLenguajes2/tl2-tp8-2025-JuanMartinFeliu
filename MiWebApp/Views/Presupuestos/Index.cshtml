@model List<Presupuestos.Presupuesto>

<section class="container mt-4">
    <h2 class="text-center">Listado de Presupuestos</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">Crear nuevo presupuesto</a>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            No hay presupuestos registrados.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-success">
                <tr>
                    <th>ID</th>
                    <th>Destinatario</th>
                    <th>Fecha de Creaci√≥n</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.IdPresupuesto</td>
                        <td>@p.NombreDestinatario</td>
                        <td>@p.FechaCreacion1.ToShortDateString()</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@p.IdPresupuesto" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@p.IdPresupuesto" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@p.IdPresupuesto" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</section>
