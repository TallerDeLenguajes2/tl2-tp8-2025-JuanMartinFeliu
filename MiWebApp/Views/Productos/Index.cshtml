@model List<Productos.Producto>

<section class="container mt-4">
    <h2 class="text-center">Listado de Productos</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">Agregar nuevo producto</a>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            No hay productos registrados.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-success">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.IdProducto</td>
                        <td>@producto.Descripcion</td>
                        <td>$@producto.Precio</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@producto.IdProducto" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@producto.IdProducto" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@producto.IdProducto" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</section>
